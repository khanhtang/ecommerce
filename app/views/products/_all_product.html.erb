<% if product.present? %>
  <div class="col-lg-4 col-md-6">
    <div class="single-product">
      <div class="product-img">
        <img class="card-img" src="assets/computer.jpg" alt=""/>
      </div>
      <div class="product-btm">
        <%= link_to product.name, product_path(product) %>
        <div class="mt-3">
          <span class="mr-4"><%= number_to_currency_format product.price %></span>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <h2><%= t "pages.empty_product" %></h2>
<% end %>
